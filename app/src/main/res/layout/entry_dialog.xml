<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/fish_dialog_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Type" />

    <TextView
        android:id="@+id/fish_dialog_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fish_dialog_type"
        android:layout_marginTop="12dp"
        android:text="Place" />

    <TextView
        android:id="@+id/fish_dialog_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fish_dialog_location"
        android:layout_marginTop="15dp"
        android:text="Size" />

    <TextView
        android:id="@+id/fish_dialog_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fish_dialog_size"
        android:layout_marginTop="21dp"
        android:text="Weight" />

    <TextView
        android:id="@+id/fish_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fish_dialog_weight"
        android:layout_marginTop="17dp"
        android:text="Date" />


</RelativeLayout>