<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/fish_spinner"
        android:layout_width="261dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22dp"
        android:entries="@array/fishes"
        app:layout_constraintBottom_toTopOf="@+id/editTextLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="@string/location_text_box"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextSize"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSize"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="@string/size_text_box"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/editTextWeight"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="@string/weight_text_box"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="354dp"
        android:ems="10"
        android:hint="@string/date_text_box"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="17dp"
        android:text="@string/save_entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>